if (menu)
    h1= "Edit menu item #" + menu[0].id
    div.cancel(style="position:absolute;top:2rem;right:2rem;cursor:pointer;font-weight:bold;font-size:2rem") x
    input(type="hidden" name="id" value=menu[0].id)

div.row
    div.two.columns
        - var days = moment.weekdays();
        label(for="dayInput") Day
        select#dayInput.u-full-width(name="day" required)
            for day in days
                option(value= day selected=menu && menu[0].day ? menu[0].day.indexOf(day) != -1 : false)= day   

    div.two.columns
        label(for="weekInput") Week number
        input#weekInput.u-full-width(type="number" name="week" oninput="validity.valid||(value='');" maxLength="100" required value=menu ? menu[0].week : "")
        
